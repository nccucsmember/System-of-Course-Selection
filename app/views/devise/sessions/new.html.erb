
<%= content_for :mainbody do %>
  <article class="five wide column">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ui form'}) do |f| %>
  <h2 class="ui header">
      Log in
  </h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" ,:class => 'ui button'%>
  </div>
<% end %>
  </article>

  <aside class="four wide column">
    <div class="ui vertical fluid menu rightMenu">
      <%= render "devise/shared/links" %>
    </div>
  </aside>

<% end %>
