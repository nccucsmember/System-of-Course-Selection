<%= content_for :mainbody do %>

  <article class="five wide column">

<%= form_for(@info, url: info_path(@info), html: { method: :put, :class => 'ui form'}) do |f| %>

  <h2 class="ui header">編輯個人檔案</h2>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => 'ui button' %>
  </div>
<% end %>

  </article>


<% end %>
